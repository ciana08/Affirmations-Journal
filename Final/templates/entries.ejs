<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Mental Health Journal</title>
    <link rel="stylesheet" href="/css/style4.css">
</head>

<body>
    <div class="topnav">
        <a href="/home">Home</a>
        <a href="/journal">My Journal</a>
        <a class="active" href="/entries">Past Entries</a>
        <a href="/affirmations">Daily Affirmation</a>
        <a href="/logout">Logout</a>
    </div>
      
    <div class="container">
    <table border="1">
        <thead>
            <tr>
                <th>Date</th>
                <th>Title</th>
                <th>Mood</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <%- entries %>
        </tbody>
    </table>
    </div>
    <hr>
    <form action="/entries" method="POST">
        <div class="button-container">
            <button type="submit" onclick="window.confirm('Are you sure you want to remove all entries?')">Delete All Entries</button>
        </div>
    </form>
</body>

</html>